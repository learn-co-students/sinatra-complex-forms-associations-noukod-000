<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>/update" method="POST">

  <label>Pet Name:</label>

  <br></br>

  <input type="text" name="pet_name" id="pet_name" value="<%= @pet.name %>">

  <br><br>
  <% @owners.each do |owner| %>
    <input type="radio" name="owner_ids[]" value="<%= owner.id %>" id="<%= owner.id %>" <%= "checked" if owner.pets.include?(@pet) %>>
    <%= owner.name %> <br />
  <% end %>
  <br><br>
  <label>name: </label>
  <input type="text" name="owner[name]" id="owner_name" />

  <br></br>

  <input type="submit" value="Update Pet">
</form>
